<config>
    <modules>
        <IntegerNet_MagentoLocalizedDE>
            <version>0.1.0</version>
        </IntegerNet_MagentoLocalizedDE>
    </modules>

    <global>
        <resources>
            <magento_localized_de_setup>
                <setup>
                    <module>IntegerNet_MagentoLocalizedDE</module>
                </setup>
            </magento_localized_de_setup>
        </resources>
    </global>

    <default>
        <general>
            <country>
                <allow>DE</allow>
            </country>
            <locale>
                <code>de_DE</code>
                <firstday>1</firstday>
            </locale>
            <store_information>
                <merchant_country>DE</merchant_country>
            </store_information>
            <imprint>
                <country>DE</country>
                <display_copyright>1</display_copyright>
            </imprint>
        </general>

        <design>
            <header>
                <welcome>Herzlich Willkommen!</welcome>
            </header>
        </design>

        <catalog>
            <custom_options>
                <time_format>24h</time_format>
                <date_fields_order>d,m,y</date_fields_order>
            </custom_options>
            <baseprice>
                <base_price_incl_tax>1</base_price_incl_tax>
                <frontend_label>entspricht {{baseprice}} pro {{reference_amount}} {{reference_unit}}</frontend_label>
            </baseprice>
        </catalog>

        <sales>
            <reorder>
                <allow>0</allow>
                <hide_sidebar_box>1</hide_sidebar_box>
            </reorder>
        </sales>

        <autoshipping>
            <settings>
                <enabled>1</enabled>
                <country_id>DE</country_id>
            </settings>
        </autoshipping>

        <carriers>
            <flatrate>
                <title>Versandkosten</title>
                <name>Pauschal</name>
                <type>O</type>
                <price>4.90</price>
            </flatrate>
            <freeshipping>
                <active>1</active>
                <title>Versandkosten</title>
                <name>Versandkostenfrei</name>
                <free_shipping_subtotal>50</free_shipping_subtotal>
            </freeshipping>
        </carriers>

        <payment>
            <ccsave>
                <active>0</active>
            </ccsave>
            <checkmo>
                <active>0</active>
            </checkmo>
            <free>
                <title>Kostenfrei</title>
            </free>
            <banktransfer>
                <active>1</active>
                <title>Vorkasse</title>
                <sort_order>20</sort_order>
            </banktransfer>
            <debit>
                <active>1</active>
                <title>Lastschrift</title>
                <sort_order>30</sort_order>
                <order_status>pending</order_status>
                <allowspecific>1</allowspecific>
                <specificcountry>DE</specificcountry>
            </debit>
            <cashondelivery>
                <active>1</active>
                <title>Nachnahme</title>
                <sort_order>40</sort_order>
                <order_status>pending</order_status>
                <shippingallowspecific>1</shippingallowspecific>
                <shippingspecificcountry>DE</shippingspecificcountry>
                <inlandcosts>2</inlandcosts>
                <customtext>Bei Zahlung per Nachnahme erhebt der Zusteller zusätzlich 2,00 €
                    Übermittlungsentgelt vor Ort.</customtext>
            </cashondelivery>
        </payment>

        <magento_localized>
            <logo_filename>images/logo-magento-de.png</logo_filename>
            <appfactory_url_de>http://de.nr-apps.com</appfactory_url_de>
            <appfactory_url_en>http://www.nr-apps.com</appfactory_url_en>
            <magentode_url_de>http://de.nr-apps.com/store/magento-de.html</magentode_url_de>
            <magentode_url_en>http://www.nr-apps.com/store/magento-de.html</magentode_url_en>
            <integernet_url_de>http://www.integer-net.de</integernet_url_de>
            <integernet_url_en>http://www.integer-net.de</integernet_url_en>
            <limesoda_url_de>http://www.limesoda.com/</limesoda_url_de>
            <limesoda_url_en>http://www.limesoda.com/</limesoda_url_en>
            <openstream_url_de>http://www.openstream.ch/</openstream_url_de>
            <openstream_url_en>http://www.openstream.ch/e</openstream_url_en>
            <tracking_url>http://www.nr-apps.com/store/germanstoreconfig/tracking</tracking_url>
            <newsfeed_url>http://www.nr-apps.com/store/media/germanstoreconfig/feed.xml</newsfeed_url>
            <iframe_url_prefix>https://www.nr-apps.com/n/magento-de/</iframe_url_prefix>
            <iframe_url_suffix>.html</iframe_url_suffix>
            <feed_url_prefix>http://www.nr-apps.com/store/media/germanstoreconfig/</feed_url_prefix>
            <default_language>
                <code>de</code>
                <name>Deutsch</name>
            </default_language>
            <available_languages>
                <en_US>English</en_US>
                <!--<fr_FR>Français</fr_FR>-->
                <!--<it_IT>Italiano</it_IT>-->
            </available_languages>
            <country>DE</country>
            <currency>EUR</currency>
            <timezone>Europe/Berlin</timezone>
            <module_title>Magento DE</module_title>
            <module_code>magento_de</module_code>
        </magento_localized>
        <germansetup>
            <default_country>de</default_country>
        </germansetup>
    </default>
</config>